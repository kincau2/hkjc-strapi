  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nameEn": {
      "type": "string"
    },
    "nameTc": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
