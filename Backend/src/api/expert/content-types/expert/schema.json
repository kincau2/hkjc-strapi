      "type": "integer",
      "default": 0
    },

    "titleEn": {
      "type": "string"
    },
    "titleTc": {
      "type": "string"
    },

    "quoteEn": {
      "type": "text"
    },
    "quoteTc": {
      "type": "text"
    },
    "videoLink": {
      "type": "string"
    },
    "profileLinkTc": {
      "type": "string"
    },
    "profileLinkEn": {
      "type": "string"
    },
    "toneStyle": {
      "type": "string"
    },
    "toneColor": {
      "type": "enumeration",
      "default": "green",
      "enum": [
        "green",
        "blue",
        "teal",
        "purple",
        "amber",
        "gold",
        "slate",
        "pink"
      ]
    },
    "isTopThree": {
      "type": "boolean",
      "default": false
    },
    "hasPublished": {
      "type": "boolean",
      "default": false
    },
    "picks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pick.pick",
      "mappedBy": "expert"
